{
  "settings": {
    "number_of_shards": 1,
    "analysis": {
      "normalizer": {
        "lc_ascii": { "type": "custom", "filter": ["lowercase", "asciifolding"] }
      },
      "analyzer": {
        "en": { "type": "standard", "stopwords": "_english_" }
      }
    }
  },
  "mappings": {
    "dynamic": false,
    "properties": {
      "perturbed_target_symbol": {
        "type": "keyword",
        "normalizer": "lc_ascii",
        "ignore_above": 256,
        "fields": {
          "text": { "type": "text", "analyzer": "en" }
        }
      },
      "n_experiments": { "type": "integer" },
      "n_sig_perturb_pairs_up": { "type": "integer" },
      "n_sig_perturb_pairs_down": { "type": "integer" },
      "n_sig_crispr": { "type": "integer" },
      "n_mave": { "type": "integer" },
      "license": { "type": "keyword", "normalizer": "lc_ascii", "ignore_above": 256 },
      "data_modalities":             { "type": "keyword", "normalizer": "lc_ascii", "ignore_above": 256 },
      "tissues_tested":              { "type": "keyword", "normalizer": "lc_ascii", "ignore_above": 256 },
      "cell_types_tested":           { "type": "keyword", "normalizer": "lc_ascii", "ignore_above": 256 },
      "cell_lines_tested":           { "type": "keyword", "normalizer": "lc_ascii", "ignore_above": 256 },
      "sex_tested":                  { "type": "keyword", "normalizer": "lc_ascii", "ignore_above": 256 },
      "developmental_stages_tested": { "type": "keyword", "normalizer": "lc_ascii", "ignore_above": 256 },
      "diseases_tested":             { "type": "keyword", "normalizer": "lc_ascii", "ignore_above": 256 }
    }
  }
}
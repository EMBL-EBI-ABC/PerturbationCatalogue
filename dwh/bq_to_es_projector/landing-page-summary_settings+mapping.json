{
  "settings": {
    "number_of_shards": 1,
    "analysis": {
      "normalizer": {
        "lc_ascii": { "type": "custom", "filter": ["lowercase", "asciifolding"] }
      },
      "analyzer": {
        "en": { "type": "standard", "stopwords": "_english_" }
      }
    }
  },
  "mappings": {
    "dynamic": false,
    "properties": {
      "n_datasets": {"type": "integer"},
      "n_experiments": { "type": "integer" },
      "min_year": { "type": "integer" },
      "max_year": { "type": "integer" },
      "n_targets": { "type": "integer" },
      "n_significant": { "type": "integer" },
      "top_modalities": {
        "type": "nested",
        "properties": {
          "value":             {
            "type": "keyword",
            "ignore_above": 256,
            "normalizer": "lc_ascii",
            "fields": { "text": { "type": "text", "analyzer": "en" } }
          },
          "n_datasets":             { "type": "integer" }
        }
      },
